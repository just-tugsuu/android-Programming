<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/courseListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
   >

    <TextView
        android:id="@+id/rvListNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ibm_plex_mono_bold"
        android:text="1"
        android:textSize="@dimen/fontMediumSize"
        android:layout_marginTop="@dimen/dimen15dp"
        android:layout_marginStart="@dimen/dimen25dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/rvCourseItems"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontMediumSize"
        android:layout_marginTop="@dimen/dimen15dp"
        android:layout_marginStart="@dimen/dimen15dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/ibm_plex_mono_bold"
        android:text="Өөрийгөө сорих  жижиг програм"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rvListNumber"
        />


    <ImageView
        android:id="@+id/rvCourseCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="@dimen/dimen15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

 <com.google.android.material.divider.MaterialDivider
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/dimen35dp"
     android:background="@color/gray"
     app:layout_constraintTop_toTopOf="@+id/rvCourseItems"
     app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>